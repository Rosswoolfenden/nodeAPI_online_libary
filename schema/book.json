{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
      "books": {
        "id": "$books",
        "title": "Books",
        "description": "Books in the public libary",
        "type": "object",
        "properties": {

          "title": {
            "description": "Main title of book",
            "type": "string"
          },
          "isbn": {
            "description": "The unique identifying number of a number",
            "type": "integer"
          },
          "rating": {
            "description": "The book rating",
            "type": "integer",
            "minimum": 0
          },
          "about": {
            "description": "A description of the book optional",
            "type": "string"
          },
          "imageURL": {
            "description": "URL for book image",
            "type": "string",
            "format": "uri"
          },
          "pubDate": {
            "description": "Date that the article was published",
            "type": "string"
          },
          "ownerId": {
            "description": "User ID of the book owner",
            "type": "integer"
          },
          "status": {
              "description": "Whether the book is available ",
              "type" : "string"
          },
          "genre": {
            "description": "The books genre",
            "type": "string"
          },
          "author": {
            "description": "The writer of the book",
            "type": "string"
          }
        },
        "required": ["title"],
        "additionalProperties": false      
      }
    }
  }
  